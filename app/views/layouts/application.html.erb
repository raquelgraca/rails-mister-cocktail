<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
        <%= link_to cocktails_path, class: "navbar-brand" do %>
          <%= image_tag "icon-star-anise.png" %>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav text-left">
            <li class="nav-item active">
              <%= link_to "Home", cocktails_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "New cocktail", new_cocktail_path(@cocktail), class: "nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    <div class="container m-3">
      <%= yield %>
    </div>
    <%= javascript_include_tag "application" %> <!-- from app/assets/javascripts/application.js -->
    <%= javascript_pack_tag "application" %>  <!-- from app/javascript/packs/application.js -->
  </body>
    <div class="footer">
      <div class="footer-links">
        <a href="#"><i class="fab fa-github p-2"></i></a>
        <a href="#"><i class="fab fa-instagram p-2"></i></a>
        <a href="#"><i class="fab fa-facebook p-2"></i></a>
        <a href="#"><i class="fab fa-twitter p-2"></i></a>
        <a href="#"><i class="fab fa-linkedin p-2"></i></a>
      </div>
    </div>
</html>
