<div class="text-white text-center">
  <h1>Gintonia</h1>
   <p>Discover the Gin world!</p>
</div>

<div class="card-columns">
  <% @cocktails.each do |cocktail| %>
    <div class="card">
      <%= cl_image_tag cocktail.photo.key, width:100 , height: 150, crop: :fill %>
      <div class="card-info bg-white">
        <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
      </div>
    </div>
  <% end %>
</div>
